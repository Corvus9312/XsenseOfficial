@page "/Product/{TypeID:int}"
@inherits ProductBase

<PageTitle>@PageTitle</PageTitle>

<FixedMenu Sidebars="Sidebars" Styles="top: 20vh; background-size: 30px 350px;" />

<div class="container mt-4" style="width: 90%">
    <div class="row text-center">
        <h1 class="fs-1 fw-bolder">@Localizer["產品"]</h1>
    </div>

    <div class="mt-3">
        <section id=@ProductVM.Title class="mt-3">
            <h2 class="fs-3 fw-bolder text-success">@ProductVM.Title</h2>

            <div class="mt-2">
                @((MarkupString)@ProductVM.Content)
            </div>
        </section>
    </div>
</div>
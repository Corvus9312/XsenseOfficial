@page "/about";
@inherits AboutBase

<PageTitle>@Localizer["艾格生科技"] - @Localizer["關於艾格生"]</PageTitle>

<FixedMenu Sidebars="Sidebars" Styles="top: 30vh; background-size: 30px 300px;" />

<div class="container mt-4" style="width: 90%">
    <div class="row text-center">
        <h1 class="fs-1 fw-bolder">@Localizer["關於艾格生"]</h1>
    </div>
    <div class="row">
        <section id="profile" class="mt-4">
            <h2 class="fs-3 fw-bolder text-success">@Localizer["公司基本介紹"]</h2>
            @((MarkupString)Profile)
        </section>
        <section id="milestone" class="mt-4">
            <h2 class="fs-3 fw-bolder text-success">@Localizer["里程碑"]</h2>
            <div class="row align-middle mt-4">
                <ul class="timeline timeline-centered">
                    @foreach (var milestone in MileStones)
                    {
                        <li class="timeline-item">
                            <div class="timeline-info">
                                <span>@milestone.Time</span>
                            </div>
                            <div class="timeline-marker"></div>
                            <div class="timeline-content">
                                <h3 class="timeline-title">@milestone.EventTitle</h3>
                                <p>@milestone.Content</p>
                            </div>
                        </li>
                    }
                </ul>
            </div>
        </section>
        <section id="quality" class="mt-4">
            <h2 class="fs-3 fw-bolder text-success">@Localizer["品質政策"]</h2>
            @((MarkupString)Quality)
        </section>
        <section id="sgs" class="mt-4">
            <h2 class="fs-3 fw-bolder text-success">@Localizer["SGS RoHS ISO"]</h2>
            @((MarkupString)SGS)
        </section>
    </div>
</div>
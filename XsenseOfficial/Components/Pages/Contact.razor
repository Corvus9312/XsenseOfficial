@page "/{Language}/contact"
@inherits ContactBase

<PageTitle>@Localizer["WebTitle"] - @Localizer["聯絡我們"]</PageTitle>
<HeadContent>
    <meta property="og:title" content="@Localizer["公司名稱"] - @Localizer["聯絡我們"]" />
    <meta property="og:description" content="@Localizer["聯絡我們"]">
    <meta property="og:locale" content="@Language">
    <meta property="og:image" content="">
</HeadContent>

<article id="contact" class="container mt-4 pb-3">
    <div class="row text-center">
        <h1 class="fs-1 fw-bolder">@Localizer["聯絡我們"]</h1>
    </div>
    <div class="mt-4 row">
        <h2 class="fs-3 fw-bolder text-success">@Localizer["Position"]</h2>
        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2155.1695193314977!2d120.91135003960099!3d24.7080378757188!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x34684c9fcd74dc01%3A0x2e4c10450bc733c!2z6Im-5qC855Sf56eR5oqA!5e0!3m2!1szh-TW!2stw!4v1697684675448!5m2!1szh-TW!2stw" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
    </div>
    <div class="mt-4 row px-4">
        <div class="col-lg">
            <h2 class="fs-3 fw-bolder text-success">@Localizer["ContactForm"]</h2>
            <div class="pe-5">
                <p class="m-0 indent-2 ">
                    @Localizer["ContactFormContent"]
                </p>
                <div class="row pt-2">
                    <div class="col-lg">
                        <p class="m-0">@Localizer["ContactName"]</p>
                        <input type="text" class="form-control" @bind=MailModel.Name />
                    </div>
                    <div class="col-lg">
                        <p class="m-0">Email</p>
                        <input type="text" class="form-control" @bind=MailModel.Email />
                    </div>
                </div>
                <div class="row pt-2">
                    <div class="col-lg">
                        <p class="m-0">@Localizer["ContactPhone"]</p>
                        <input type="text" class="form-control" @bind=MailModel.Phone />
                    </div>
                    <div class="col-lg">
                        <p class="m-0">@Localizer["ContactSubject"]</p>
                        <select class="form-select" @bind=MailModel.Subject>
                            <option>@Localizer["ContactProductIssue"]</option>
                            <option>@Localizer["ContactTechIssue"]</option>
                            <option>@Localizer["ContactAdminIssue"]</option>
                            <option>@Localizer["ContactOtherIssue"]</option>
                        </select>
                    </div>
                </div>
                <div class="row pt-2">
                    <div class="col-lg">
                        <p class="m-0">@Localizer["ContactContent"]</p>
                        <textarea type="text" class="form-control" style="height: 10em;" @bind=MailModel.body></textarea>
                    </div>
                </div>
                <div class="row pt-2">
                    <div class="d-flex justify-content-end">
                        <input type="button" class="form-control" style="width: max-content" value="送出" @onclick=SendEmail />
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg px-4">
            <h2 class="fs-3 fw-bolder text-success">@Localizer["ContactInfo"]</h2>
            @((MarkupString)ContactInfo)
        </div>
    </div>
</article>
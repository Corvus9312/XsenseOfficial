@page "/{Language}/Index"
@inherits IndexBase

<PageTitle>@Localizer["公司名稱"]</PageTitle>

<article id="index" class="swiper mySwiper">
    <div class="swiper-wrapper">
        @foreach (var swiper in SwiperImgs)
        {
            <div class="swiper-slide">
                <img src=@swiper />
            </div>
        }
    </div>
    <div class="swiper-button-next"></div>
    <div class="swiper-button-prev"></div>
</article>

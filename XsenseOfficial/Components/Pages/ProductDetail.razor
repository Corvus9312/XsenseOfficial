@page "/{Language}/product/{TypeID:int}"
@inherits ProductDetailBase

<PageTitle>@Localizer["公司名稱"] - @ProductVM.Title</PageTitle>
<HeadContent>
    <meta property="og:title" content="@Localizer["公司名稱"] - @ProductVM.Title" />
    <meta property="og:description" content="@ProductVM.Title">
    <meta property="og:locale" content="@Language">
</HeadContent>

<FixedMenu Sidebars="Sidebars" Styles="top: 20vh; background-size: 30px 400px;" />

<article id="product-detail" class="container mt-4 pb-3">
    <section id="@ProductVM.Title">
        <div class="row text-center">
            <h1 class="fs-1 fw-bolder">@ProductVM.Title</h1>
        </div>
        <div class="mt-2">
            @((MarkupString)@ProductVM.Content)
        </div>
    </section>
</article>
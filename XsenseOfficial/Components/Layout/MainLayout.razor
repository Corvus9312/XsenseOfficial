@using XsenseOfficial.Shared
@inherits MainLayoutBase

<PageTitle>艾格生科技</PageTitle>

<div id="top" class="d-flex flex-column" style="min-height: 100vh;">
    <main class="flex-shrink-0">
        <nav id="navbar" class="navbar navbar-expand-lg navbar-light fixed-top">
            <div class="container">
                <a class="navbar-brand" href="/@Culture.Name/Index">
                    <img src="/images/logo.webp" alt="Xense" style="width: 15vw; min-width: 200px;" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#xsenseNavbar" aria-controls="xsenseNavbar" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="xsenseNavbar">
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="/@Culture.Name/about">@Localizer["關於我們"]</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link active" aria-current="page" href="/@Culture.Name/product">@Localizer["產品中心"]</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="/@Culture.Name/enterpriseSustainable">@Localizer["企業永續經營"]</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="/@Culture.Name/join">@Localizer["加入我們"]</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="/@Culture.Name/contact">@Localizer["聯絡我們"]</a>
                        </li>
                        <li class="nav-item">
                            <select id="culture-select" @bind="Culture" class="form-select" style="background-color: transparent;" aria-label="culture">
                                @foreach (var culture in MultilingualLocalizer.SupportedCultures)
                                {
                                    <option value="@culture.Culture">@culture.Name</option>
                                }
                            </select>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        <div class="container-fluid" style="padding: 80px 0 0 0">
            @Body
        </div>

    </main>
    <footer class="footer mt-auto border-top">
        <div class="container d-flex justify-content-between py-1">
            <p class="mb-2">
                Copyright © 2016 Xsense Technology Corp, INC. All rights reserved.
                <br />
                Tel:+886-37-580079　　Fax:+886-37-580393　　E-mail:<a href="MailTo:xservice@xsensetw.com">xservice@xsensetw.com</a>
                <br />
                Address : @Localizer["Address"]
            </p>
        </div>
    </footer>

</div>
